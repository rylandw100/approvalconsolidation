{
  "name": "@rippling/pebble-playground",
  "version": "1.0.0",
  "description": "AI-friendly prototyping environment for Rippling's Pebble Design System",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "node scripts/setup-mcp.mjs setup",
    "dev": "node scripts/setup-user.mjs && vite --port 4201",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "setup:user": "node scripts/setup-user.mjs",
    "mcp:setup": "node scripts/setup-mcp.mjs setup",
    "mcp:status": "node scripts/setup-mcp.mjs status",
    "mcp:global": "node scripts/setup-mcp.mjs global",
    "new:demo": "node scripts/create-demo.mjs",
    "new:shell": "node scripts/create-shell-demo.mjs",
    "catalog": "node scripts/generate-catalog.mjs",
    "override": "node scripts/override-component.mjs",
    "list-overrides": "node scripts/list-overrides.mjs",
    "sync-confluence": "node scripts/sync-confluence-docs.mjs",
    "generate-token-docs": "node scripts/generate-token-docs.mjs",
    "update-docs": "npm run sync-confluence && npm run generate-token-docs",
    "help": "cat AI_CONTEXT.md",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\""
  },
  "dependencies": {
    "@babel/runtime": ">=7.9.6",
    "@emotion/css": "^11.13.5",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@rippling/lib-i18n": "latest",
    "@rippling/pebble": "^0.1017.0",
    "@rippling/pebble-tokens": "^0.0.107",
    "@rippling/ui-utils": "latest",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "marked": "^16.4.1",
    "prop-types": ">=15.7.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is": "17.0.2",
    "react-json-view": "^1.21.3",
    "react-router-dom": "^7.9.5",
    "react-shadow": "^20.3.0",
    "react-sortablejs": "^6.1.4",
    "react-virtuoso": "~2.19.1",
    "shortid": "2.2.16",
    "sortablejs": "^1.15.6",
    "vanilla-masker": "1.2.0"
  },
  "devDependencies": {
    "@emotion/babel-plugin": "^11.13.5",
    "@rippling/pebble-mcp": "^0.137.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.2.1",
    "confluence-api": "^1.4.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "prettier": "^3.2.4",
    "turndown": "^7.2.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
